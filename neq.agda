----------------------------------------------------------------------
-- syntax
----------------------------------------------------------------------

infix 4 _≢_ 

----------------------------------------------------------------------
-- defined types
----------------------------------------------------------------------

_≢_ : ∀ {ℓ}{A : Set ℓ} → A → A → Set ℓ
x ≢ y = ¬ (x ≡ y)

≢antirefl : ∀{ℓ}{A : Set ℓ}{a : A} → a ≢ a → ∀{P : Set ℓ} → P
≢antirefl{ℓ} p = ⊥-elim (p refl)